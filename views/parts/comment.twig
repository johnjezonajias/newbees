<div class="blog-comment {{comment.comment_type}}" id="blog-comment-{{comment.ID}}">
	<h5 class="text-h5 comment-author">{{comment.author.name}} says</h5>
	<div class="comment-content">{{comment.comment_content|wpautop}}</div>

	<section class="comment-box">
		
		<!-- comment form -->
		{% include "partial/comment-form.twig" %}

		<!-- child comments -->
		{% if post.comments %}
			<h4 class="text-h4"> replies </h4>
			<div class="comments">
				{% for cmt in comment.children %}
					{% include "parts/comment.twig" with {comment:cmt} %}
				{% endfor %}
			</div>
		{% endif %}

	</section>
</div>